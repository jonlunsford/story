<h1 class="text-5xl font-bold mb-8">Forgot your password?</h1>

<.form let={f} for={:user} action={Routes.user_reset_password_path(@conn, :create)}>
  <div class="p-10 card bg-base-200 mb-8">
    <div class="form-control mb-8">
      <%= label f, :email, class: "label" do %>
        <span class="label-text font-bold">Email</span>
      <% end %>
      <%= email_input f, :email, required: true, class: "input" %>
    </div>

    <div>
      <%= submit "Send instructions to reset password", class: "btn btn-primary" %>
    </div>
  </div>
</.form>

<p>
  <%= link "Register", to: Routes.user_registration_path(@conn, :new), class: "link link-primary" %> |
  <%= link "Log in", to: Routes.user_session_path(@conn, :new), class: "link link-primary" %>
</p>
