<div id="info" class={"relative p-2 #{if @info.id, do: 'border border-dashed', else: ''}"}>
  <%= if @info.id do %>
    <button phx-click={JS.add_class("hidden", to: "#info") |> JS.remove_class("hidden", to: "#edit-info")} class="right-0 top-0 absolute rounded-sm btn btn-neutral btn-outline btn-sm">Edit</button>
  <% end %>

  <%= StoryWeb.PageView.render("_info.html", info: @info) %>
</div>

<%= if !@info.id do %>
  <div id="info" class="pt-4 w-full add-info-callout text-center">
    <button phx-click={JS.add_class("hidden", to: "#info") |> JS.remove_class("hidden", to: "#edit-info")} class="rounded-sm btn btn-neutral btn-outline btn-sm">Add personal information</button>
    <p class="italic font-xs font-light mt-4 md:w-1/2 mx-auto">Add some personal details so potential employers can learn a bit about you.</p>
  </div>
<% end %>
